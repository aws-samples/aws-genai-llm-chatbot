    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.97.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-authorizers-alpha": "^2.97.0-alpha.0",
